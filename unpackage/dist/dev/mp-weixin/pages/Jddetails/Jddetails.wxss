.detail {
  width: 100%;
  height: 100%;
}
.detail .navTitle {
  width: 90%;
  height: 80rpx;
  padding: 30rpx 0 30rpx 30rpx;
}
.detail .navTitle .h {
  font: 36rpx/50rpx '微软雅黑';
  color: #202022;
}
.detail .navTitle .t text {
  font: 25rpx/40rpx '微软雅黑';
  color: #999A9B;
}
.detail .box {
  width: 90%;
  height: 1040rpx;
  margin: 10rpx auto 50rpx;
  padding: 20rpx 0;
  white-space: nowrap;
  /*文本不会换行，文本会在在同一行上继续*/
  overflow-x: auto;
  /*可滑动*/
}
.detail .box .bigBox {
  width: 84%;
  height: 92%;
  background: #fff;
  display: inline-block;
  margin-right: 10px;
  border: 16rpx solid #e6e6e6;
  vertical-align: top;
}
.detail .box .bigBox .name {
  margin-left: 20rpx;
}
.detail .box .bigBox .img {
  width: 100%;
  height: 100%;
}
.detail .box .bigBox .img .picImage {
  width: 100%;
  height: 100%;
  position: relative;
}
.detail .box .bigBox .img .picImage image {
  display: inline-block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.detail .box .bigBox .img .picImage .picNumber {
  border-radius: 20rpx;
  padding: 0 20rpx;
  height: 80rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  font: 35rpx/80rpx '微软雅黑';
  color: #666;
}
.detail .box .bigBox .img .flex {
  width: 100%;
  height: 100%;
  position: relative;
}
.detail .box .bigBox .img .flex .image {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  -webkit-filter: blur(6px);
          filter: blur(6px);
}
.detail .box .bigBox .img .flex .playMoney {
  width: 230rpx;
  height: 170rpx;
  left: 50%;
  top: 50%;
  position: absolute;
  border: 1px dashed #fff;
  background: rgba(0, 0, 0, 0.2);
  margin-left: -115rpx;
  margin-top: -115rpx;
  text-align: center;
  padding: 30rpx 0;
}
.detail .box .bigBox .img .flex .playMoney image {
  display: block;
  margin: 10rpx auto;
  width: 34rpx;
  height: 36rpx;
}
.detail .box .bigBox .img .flex .playMoney .title {
  font: 28rpx/40rpx '微软雅黑';
  color: #fff;
}
.detail .box .bigBox .img .flex .picNumber {
  border-radius: 20rpx;
  padding: 0 20rpx;
  height: 80rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  font: 35rpx/80rpx '微软雅黑';
  color: #666;
}

